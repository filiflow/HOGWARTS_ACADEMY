<div class="cards">
  <% @activities.each do |activity| %>
    <div class="card-activity">
      <%= cl_image_tag activity.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-activity-info">
        <div>
          <h2><%= link_to activity.title, activity_path(activity), method: :get %></h2>
          <p><%= activity.summary %></p>
        </div>
        <h2 class="cards-pricing"> Â£<%= activity.price %></h2>
        <img src="https://fyooyzbm.filerobot.com/v7/capture+d%27%C3%A9cran+du+film-8ae4tfo3.webp?vh=6b10e7&ci_seal=40952d949b&w=480&h=382&gravity=auto&func=crop" class="cards-user avatar-bordered" />
      </div>
      <div class="container mb-2">
        <div class="action-icons">
          <%= link_to '<i class="fa-regular fa-pen-to-square" style="color: #000000;"></i>'.html_safe, edit_activity_path(activity) %>
          <%= link_to '<i class="fa-regular fa-trash-can" style="color: #000000;"></i>'.html_safe, activity_path(activity), data: {turbo_method: :delete, turbo_confirm: "Do you really want to delete this activity?"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
